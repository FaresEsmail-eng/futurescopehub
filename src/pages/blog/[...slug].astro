---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const categoryColors = {
  tech: { bg: 'tag-tech', text: 'Tech', icon: 'âš¡' },
  entertainment: { bg: 'tag-entertainment', text: 'Entertainment', icon: 'ðŸŽ¬' },
  news: { bg: 'tag-news', text: 'News', icon: 'ðŸ“°' }
};

const cat = categoryColors[post.data.category];

const formattedDate = new Intl.DateTimeFormat('en-US', {
  weekday: 'long',
  month: 'long',
  day: 'numeric',
  year: 'numeric'
}).format(post.data.pubDate);

// Get related posts (same category, excluding current)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.data.category === post.data.category && p.slug !== post.slug)
  .slice(0, 3);
---

<BaseLayout 
  title={post.data.title} 
  description={post.data.description}
  image={post.data.heroImage}
>
  <!-- Reading Progress Bar -->
  <div class="reading-progress" style="width: 0%"></div>
  
  <Header />
  
  <main class="pt-20">
    <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Header -->
      <header class="mb-10">
        <!-- Category & Meta -->
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <span class:list={[
            "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold text-white",
            cat.bg
          ]}>
            <span>{cat.icon}</span>
            <span>{cat.text}</span>
          </span>
          
          <span class="text-[var(--color-text-muted)]">â€¢</span>
          <time class="text-sm text-[var(--color-text-muted)]" datetime={post.data.pubDate.toISOString()}>
            {formattedDate}
          </time>
          
          {post.data.readingTime && (
            <>
              <span class="text-[var(--color-text-muted)]">â€¢</span>
              <span class="text-sm text-[var(--color-text-muted)]">{post.data.readingTime}</span>
            </>
          )}
        </div>
        
        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold text-white leading-tight mb-6">
          {post.data.title}
        </h1>
        
        <!-- Description -->
        <p class="text-lg sm:text-xl text-[var(--color-text-secondary)] leading-relaxed">
          {post.data.description}
        </p>
        
        <!-- TLDR Box -->
        {post.data.tldr && (
          <div class="mt-8 p-6 rounded-2xl bg-gradient-to-r from-[var(--color-galaxy-dark)] to-[var(--color-deep-space)] border border-[var(--color-neon-cyan)]/30">
            <div class="flex items-center gap-2 mb-3">
              <span class="text-xl">âš¡</span>
              <span class="font-semibold text-[var(--color-neon-cyan)]">TL;DR</span>
            </div>
            <p class="text-[var(--color-text-secondary)]">{post.data.tldr}</p>
          </div>
        )}
        
        <!-- Tags -->
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-6">
            {post.data.tags.map(tag => (
              <span class="px-3 py-1 text-sm rounded-lg bg-[var(--color-galaxy-dark)] text-[var(--color-text-muted)] border border-[var(--color-nebula-gray)]/50">
                #{tag}
              </span>
            ))}
          </div>
        )}
      </header>
      
      <!-- Hero Image -->
      {post.data.heroImage && (
        <div class="mb-10 rounded-2xl overflow-hidden">
          <img 
            src={post.data.heroImage} 
            alt={post.data.title}
            class="w-full aspect-video object-cover"
          />
        </div>
      )}
      
      <!-- Content -->
      <div class="article-content">
        <Content />
      </div>
      
      <!-- Sources -->
      {post.data.sources && post.data.sources.length > 0 && (
        <div class="mt-12 p-6 rounded-2xl bg-[var(--color-deep-space)] border border-[var(--color-nebula-gray)]/50">
          <h4 class="font-semibold text-white mb-4 flex items-center gap-2">
            <span>ðŸ“š</span>
            <span>Sources & References</span>
          </h4>
          <ul class="space-y-2">
            {post.data.sources.map((source, i) => (
              <li>
                <a 
                  href={source.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-[var(--color-neon-cyan)] hover:text-[var(--color-neon-pink)] transition-colors text-sm"
                >
                  [{i + 1}] {source.title} â†—
                </a>
              </li>
            ))}
          </ul>
        </div>
      )}
      
      <!-- Author Box -->
      <div class="mt-12 p-6 rounded-2xl bg-gradient-to-r from-[var(--color-galaxy-dark)] to-[var(--color-deep-space)] border border-[var(--color-nebula-gray)]/50">
        <div class="flex items-center gap-4">
          <div class="w-14 h-14 rounded-full bg-gradient-to-br from-[var(--color-electric-blue)] to-[var(--color-neon-purple)] flex items-center justify-center text-2xl">
            ðŸ¤–
          </div>
          <div>
            <div class="font-semibold text-white">{post.data.author}</div>
            <div class="text-sm text-[var(--color-text-muted)]">AI-generated content with human oversight</div>
          </div>
        </div>
      </div>
      
      <!-- Share Buttons -->
      <div class="mt-8 flex items-center gap-4">
        <span class="text-sm text-[var(--color-text-muted)]">Share:</span>
        <a 
          href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${Astro.url}`}
          target="_blank"
          class="p-2 rounded-lg bg-[var(--color-galaxy-dark)] hover:bg-[var(--color-nebula-gray)] transition-colors"
          aria-label="Share on X/Twitter"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a 
          href={`https://www.linkedin.com/sharing/share-offsite/?url=${Astro.url}`}
          target="_blank"
          class="p-2 rounded-lg bg-[var(--color-galaxy-dark)] hover:bg-[var(--color-nebula-gray)] transition-colors"
          aria-label="Share on LinkedIn"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      </div>
    </article>
    
    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 border-t border-[var(--color-nebula-gray)]/30">
        <h3 class="text-2xl font-bold text-white mb-8">More in {cat.text}</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {relatedPosts.map(related => (
            <a 
              href={`/blog/${related.slug}`}
              class="group p-6 rounded-2xl bg-[var(--color-deep-space)] border border-[var(--color-nebula-gray)]/30 hover:border-[var(--color-neon-cyan)]/50 transition-colors"
            >
              <h4 class="font-semibold text-white group-hover:text-[var(--color-neon-cyan)] transition-colors line-clamp-2 mb-2">
                {related.data.title}
              </h4>
              <p class="text-sm text-[var(--color-text-muted)] line-clamp-2">
                {related.data.description}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}
  </main>
  
  <Footer />
</BaseLayout>
